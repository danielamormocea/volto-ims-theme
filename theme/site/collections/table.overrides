/*-------------------
      FOOTER
--------------------*/

.first-footer {
  .ui.table {
    font-size: 1em;
    background: none !important;
    border: none !important;
    border-collapse: collapse !important;
    max-width: 100% !important;
    width: auto;
    tr td {
      border-top: none !important;
      padding: 0.2em;
    }
    @media only screen and (max-width: 860px) {
      &:not(.unstackable) .table-link-description {
        font-weight: normal !important;
      }
      &:not(.unstackable) tr {
        box-shadow: none !important;
        padding: 0em !important;
      }
      &:not(.unstackable) tr td {
        padding: 0em !important;
      }
      &:not(.unstackable) tr td.table-link-description {
        margin-bottom: 1em !important;
      }
      &:not(.unstackable) tr.right-row {
        display: flex !important;
        flex-direction: column;
      }
    }
    &:first-child,
    &:last-child {
      margin: 0em !important;
    }
  }
  .ui.grid {
    margin: 0 !important;
  }

  .two-tables {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin: 0 auto;
    max-width: 1500px;
    justify-content: space-around;
    font-size: 12px;
    @media only screen and (max-width: 603px) {
      flex-direction: column;
      line-height: 1;
    }
  }

  .left-table,
  .right-table {
    .table-link-title,
    .table-link-description {
      @media only screen and (max-width: 860px) {
        text-align: center !important;
        width: 100%;
        display: block;
      }
    }
    .table-link-title {
      font-weight: bold;
    }
  }

  .left-table .table-link-title {
    text-align: right;
  }
  .left-table .table-link-description {
    @media screen and (min-width: 860px) {
      padding-left: 1em !important;
    }
  }

  .right-table .table-link-description {
    text-align: right;
    @media screen and (min-width: 860px) {
      order: 1;
      padding-right: 1em !important;
    }
  }
}
